<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/RcTheme.Toolbar"
    android:orientation="vertical" >

    <io.rong.imkit.view.MessageBar
        android:uid="@+uid/conversation_message_bar_message_bar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:uid="@+uid/conversation_message_bar_expression_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_to_dip_480"
        android:visibility="gone" >

        <io.rong.imkit.view.EmotionView
            android:uid="@+uid/conversation_message_bar_emotion_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:uid="@+uid/conversation_message_bar_rich_text_layout"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/px_to_dip_480"
        android:layout_gravity="center_horizontal"
        android:gravity="left"
        android:paddingBottom="@dimen/px_to_dip_44"
        android:paddingTop="@dimen/px_to_dip_44"
        android:visibility="gone" >

        <io.rong.imkit.view.RichIconTextView
            android:uid="@+uid/imagetRichIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rc_rich_text_icon_margin"
            android:clickable="true" />

        <io.rong.imkit.view.RichIconTextView
            android:uid="@+uid/camertRichIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rc_rich_text_icon_margin"
            android:layout_toRightOf="@uid/imagetRichIcon"
            android:clickable="true" />

        <io.rong.imkit.view.RichIconTextView
            android:uid="@+uid/voipRichIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rc_rich_text_icon_margin"
            android:layout_toRightOf="@uid/camertRichIcon" />

        <io.rong.imkit.view.RichIconTextView
            android:uid="@+uid/locationRichIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rc_rich_text_icon_margin"
            android:layout_toRightOf="@uid/voipRichIcon" />

    </RelativeLayout>

</LinearLayout>